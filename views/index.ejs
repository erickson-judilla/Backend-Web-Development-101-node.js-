<% layout('layouts/boilerplate') %>
<h1>All List of hotel</h1>
<div>
	<a href="/airbnbs/new">Add Hotel</a>
</div>

<% for(let airbnb of airbnbs) {%>
<div class="card mb-3">
	<div class="row">
		<div class="col-md-4">
			<img class="img-fluid" alt="" src="<%= airbnb.image  %> " />
		</div>
		<div class="col-md-8">
			<div class="card-body">
				<h5 class="card-title"><%=airbnb.title %></h5>
				<p class="card-text"><%=airbnb.description %></p>
				<p class="card-text">
					<small class="text-muted"><%=airbnb.location %></small>
				</p>
				<a class="btn btn-primary" href="/<%= airbnb._id %> "
					>View <%=airbnb.title %></a
				>
			</div>
		</div>
	</div>
</div>
<% } %>
